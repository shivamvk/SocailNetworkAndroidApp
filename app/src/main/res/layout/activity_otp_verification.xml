<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:layout_height="match_parent"
    tools:context=".OTPVerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:text="Sent an OTP to xyz@xyz.xyz"
            android:textColor="@android:color/holo_green_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter OTP"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:layout_width="40sp"
                android:layout_height="42sp"
                android:maxLength="1"
                android:id="@+id/et1_otp_verification"
                android:inputType="numberPassword"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:text="1"
                android:nextFocusRight="@id/et2_otp_verification">
            <requestFocus/>
            </EditText>
            <EditText
                android:layout_width="40sp"
                android:layout_height="42sp"
                android:maxLength="1"
                android:layout_margin="5dp"
                android:id="@+id/et2_otp_verification"
                android:inputType="numberPassword"
                android:textAlignment="center"
                android:text="1"/>
            <EditText
                android:layout_width="40sp"
                android:layout_height="42sp"
                android:maxLength="1"
                android:layout_margin="5dp"
                android:id="@+id/et3_otp_verification"
                android:inputType="numberPassword"
                android:textAlignment="center"
                android:text="1"/>
            <EditText
                android:layout_width="40sp"
                android:layout_height="42sp"
                android:maxLength="1"
                android:layout_margin="5dp"
                android:id="@+id/et4_otp_verification"
                android:inputType="numberPassword"
                android:textAlignment="center"
                android:text="1"/>
        </LinearLayout>
        <Button
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/bt_otp_verification_activity_submit_button"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>