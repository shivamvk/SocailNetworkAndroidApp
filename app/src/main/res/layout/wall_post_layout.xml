<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholderboy"
                    android:id="@+id/iv_wall_post_user_image"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_wall_post_user_name"
                    android:text="Loading..."
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/iv_wall_post_user_image"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:id="@+id/tv_wall_post_popup_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:paddingRight="8dp"
                    android:text="&#8942;"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceLargePopupMenu" />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="hello world!"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:id="@+id/tv_wall_post_message"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/imageloading"
                android:scaleType="centerCrop"
                android:layout_marginBottom="8dp"
                android:id="@+id/iv_wall_post_item_post_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="50"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="16dp"
                        android:clickable="true"
                        android:id="@+id/iv_wall_post_like_button"
                        android:src="@drawable/ic_thumb_up_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:text="0"
                        android:id="@+id/tv_wall_post_liked_by"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:background="@drawable/ronded_button"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="50"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:id="@+id/iv_wall_post_comment_button"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_comment_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_wall_post_comments"
                        android:text="0"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:background="@drawable/ronded_button"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>