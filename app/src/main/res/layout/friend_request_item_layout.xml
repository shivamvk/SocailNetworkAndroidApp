<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:id="@+id/main_layout_friend_request_item">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="16dp"
        app:cardElevation="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp">

            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/placeholderboy"
                android:id="@+id/iv_friend_request_item_user_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_friend_request_item_user_name"
                android:layout_toRightOf="@+id/iv_friend_request_item_user_image"
                android:text="Shivam.vk"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_friend_request_item_user_email"
                android:text="shivambhasin@gmail.com"
                android:layout_below="@+id/tv_friend_request_item_user_name"
                android:layout_marginLeft="51dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/bt_friend_request_item_accept"
                android:layout_below="@+id/iv_friend_request_item_user_image"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="51dp"
                android:text="Accept"
                android:background="@android:color/holo_green_light"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/bt_friend_request_item_delete"
                android:layout_below="@+id/iv_friend_request_item_user_image"
                android:layout_toRightOf="@+id/bt_friend_request_item_accept"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="Delete"
                android:background="@android:color/holo_red_dark"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>